# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
syslog         on

# Gandi
account        gandi
host           mail.gandi.net
port           587
from           <your email>
user           <your email>
password       <your password>

# Set a default account
account default : gandi
aliases        /etc/aliases